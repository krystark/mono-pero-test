# === Base ===
RewriteEngine On

# --- HTTPS (упростим) ---
# на локали не редиректим
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP_HOST} !^localhost(:\d+)?$ [NC]
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# --- Канонизация www -> non-www (если нужно) ---
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

# --- Статические файлы/папки пропускаем ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule - [L]

# --- SPA fallback ---
RewriteRule ^ index.html [L]

# === Headers ===
<IfModule mod_headers.c>
  # Безопасность
  Header always set X-Content-Type-Options "nosniff"
  Header unset X-Powered-By

  # Полезные политики (по желанию)
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set X-Frame-Options "SAMEORIGIN"
  # Включай HSTS только если домен уже на https и субдомены тоже
  # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

  # CORS для шрифтов/картинок, если нужна отрисовка в canvas/pdf
  <FilesMatch "\.(woff2?|ttf|otf|eot)$">
    Header always set Access-Control-Allow-Origin "*"
  </FilesMatch>
  <FilesMatch "\.(png|jpe?g|gif|webp|svg)$">
    Header always set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>

# === Сжатие ===
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

# === Кеширование ===
<IfModule mod_expires.c>
  ExpiresActive On
  # HTML – не кэшируем
  ExpiresByType text/html "access plus 0 seconds"
  # Статика (Vite c хешами)
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/css                "access plus 1 year"
  ExpiresByType image/svg+xml           "access plus 1 year"
  ExpiresByType image/webp              "access plus 1 year"
  ExpiresByType image/png               "access plus 1 year"
  ExpiresByType image/jpeg              "access plus 1 year"
  ExpiresByType font/woff2              "access plus 1 year"
</IfModule>

# === Доступ к файлам ===
Options -Indexes -MultiViews

# Запрет скрытых файлов .git, .env и т.п.
<FilesMatch "^(.*\/)?\.">
  Require all denied
</FilesMatch>
